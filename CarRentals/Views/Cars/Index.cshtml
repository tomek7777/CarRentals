@model IEnumerable<Car>


@{
    ViewData["Title"] = "List of Cars";
}

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 col-xs-6 border-primary mb-3">
            <div class="card mb-3" style="max-width: 540px;">
                <div class="row g-0">
                    <div class="col-md-12">
                        <div class="card-header text-white bg-info">
                            <p class="card-text">
                                <h5 class="card-title">
                                    @item.Model
                                    @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                                    {
                                        <a class="text-white float-right" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i></a>
                                    }
                                </h5>
                            </p>
                        </div>
                    </div>
                    <div class="col-md-9">
                        <img src="@item.Photo" width="125%" alt="@item.Model" class="text-center">
                    </div>
                    <div class="col-md-6">
                        <div class="card-body">
                            <p class="card-text"><b>Model: </b>@item.Model</p>
                            <p class="card-text"><b>Marka: </b>@item.Mark</p>                            
                            <p class="card-text"><b>Description of auto: </b>@item.Description</p>
                            <p class="card-text"><b>Price per day: </b>@item.Price</p>
                            <p class="card-text">                  
                                                              
                            </p>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="card-footer ">
                            <p class="card-text">
                                <div class="text-md-right">
                                    @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                                    {
                                        <a class="btn btn-danger text-white" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash"></i>Delete </a>
                                    }
                                </div>

                                <a class="btn btn-outline-primary float-right" asp-action="Details" asp-route-id="@item.Id">
                                    <i class="bi bi-eye-fill"></i> Show Details
                                </a>                                        
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    }

</div>
<div style="position: fixed; right: 25px; bottom: 25px; " class="text-white">
    @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
    {
        <a asp-controller="Cars" asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle">Add New</i>
        </a>
    }
    </div>



